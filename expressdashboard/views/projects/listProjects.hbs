<!--List of Projects-->
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1>List of Projects</h1>
        </div>
        <div class="col-md-4 text-right">
            <a href="/projects/new" class="btn btn-primary">Create New Projects</a>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
        {{#each projects}}
        <tr>
            <td><img src="{{image}}" width="70" height="70"></td>
            <td class="text-light">{{title}}</td>
            <td >{{description}}</td>
            <td >
                <a class="text-light" href="/projects/{{_id}}">Details</a>
                <a class="text-light" href="/projects/{{_id}}/delete">Delete</a>
            </td>
        </tr>
        {{/each}}
    </table>
</div>