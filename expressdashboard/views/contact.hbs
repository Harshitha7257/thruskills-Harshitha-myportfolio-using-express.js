<!-- Contact Page -->
<main role="main">
    <div class="album py-3 bg-light">
        <div class="container">
            <div class="col-md-9">
                    <form action="/contact" method="POST">
                        <div class="mb-4">
                            <h1 class="h3 mb-3 font-weight-normal">Contact Me</h1>
                        </div>
                        <hr>
                        <br>
                         {{#if errors}}
                         {{#each messages}}
                           <div class="alert alert-danger" role="alert">
                              {{this}}
                            </div>
                            {{/each}}
                         {{/if}}

                         {{#if success}}
                           <div class="alert alert-success" role="alert">
                              Thank you for contacting us. We will get back at the earliest
                            </div>
                         {{/if}}

                        <div class="form-label-group">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" class="form-control" placeholder="Name" autofocus
                                required value="{{contact.name}}">
                        </div>

                        <div class="form-label-group">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" class="form-control" placeholder="Email address"
                               value="{{contact.email}}">
                        </div>

                        <div class="form-label-group">
                            <label for="mobile">Mobile</label>
                            <input type="number" name="mobile" id="mobile" class="form-control" placeholder="Mobile"
                               value="{{contact.mobile}}">
                        </div>

                        <div class="form-label-group">
                            <br>
                            <textarea name="description" id="description" rows="5" class="form-control"
                                placeholder="Description">{{contact.description}}</textarea>
                        </div>

                        <div class="form-label-group">
                            <br>
                            <button class="btn btn-lg btn-primary btn-block" type="submit"> Submit</button>
                        </div>
                    </form>
                </div>


            </div>
        </div>
    </div>
    </div>
</main>